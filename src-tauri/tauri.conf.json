{
	"version": "1.1.0",
	"productName": "Reskin",
	"identifier": "com.reskin.reskinapp",
	"build": {
		"frontendDist": "../dist",
		"removeUnusedCommands": true,
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
			"visible": true,
				"minWidth": 400,
				"minHeight": 300,
				"maximized": true,
				"title": "Reskin"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png"
		]
	}
}
